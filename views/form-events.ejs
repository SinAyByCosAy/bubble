    <!-- timeline Grid Section -->
    <section class="container">
        <h1>Data Entry</h1>
        <form id="form">
            <div class="row">
                <div class="col-12" id="event">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Select Match</div>
                            <select class="form-control" id="select-match">
                                <option value="no">Choose a match</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-details row" style="margin-top:20px" id="event-details">
                <div class="col-6">
                    <div class="form-group">
                         <div class='input-group'>
                             <div class="input-group-addon">Event Time</div>
                            <input type="datetime-local" class="form-control data" id="time">
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Name of Event</div>
                            <input type="text" class="form-control data" id="name">
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Event Description</div>
                            <input type="text" class="form-control data" id="description">
                        </div>
                    </div>
                </div>
                <div class="col-6">
                   <div class="input-group" style="margin-top:10px">
                            <div class="input-group-addon">Select Player</div>
                            <select class="form-control" id="select-player" multiple></select>
                    </div>
                </div>

                <div class="col-12 text-center">
                    <button style="margin-top: 2em; margin-bottom:2em;" type="button" id="submit" class="btn btn-primary">Submit</button>
                    <p id="details-submit"></p>
                </div>

            </div>



            <textarea class="form-control" rows="20" id="preview"></textarea>
            <div class="col-12 text-center">
                <button type="" style="margin-top: 2em;" id="add-to-db" class="btn btn-primary">Add to Database</button>
            </div>
            </div>
        </form>
    </section>

